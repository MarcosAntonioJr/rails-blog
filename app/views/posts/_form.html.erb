<%= form_with model: post do |form| %>
    <% if form.object.errors.any? %>
      <div>
          <% form.object.errors.full_messages.each do |msg| %>
             <div> <%= msg %> </div>
          <% end %>
      </div>
    <% end %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>